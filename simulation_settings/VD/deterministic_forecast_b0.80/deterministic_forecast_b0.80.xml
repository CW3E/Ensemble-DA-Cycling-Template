<?xml version="1.0"?>
<!DOCTYPE workflow
[
  <!-- GSI Observation-Analysis-Forecast Cycling Workflow -->

  <!-- NAME OF CONTROL FLOW -->
  <!ENTITY BETA                "0.80">
  <!ENTITY CSE_NAME            "VD">
  <!ENTITY CNFG_NAME           "deterministic_forecast_b&BETA;">
  <!ENTITY EXP_NAME            "&CSE_NAME;/&CNFG_NAME;">
  <!-- NAME OF CONTROL FLOW -->

  <!-- COMPUTER-DEPENDENT ITEMS -->
  <!ENTITY CLONE_ROOT          "/cw3e/mead/projects/cwp106/scratch/GSI-WRF-Cycling-Template">
  <!ENTITY SOFT_ROOT           "/cw3e/mead/projects/cwp130/scratch/cgrudzien">
  <!ENTITY DATA_ROOT           "/cw3e/mead/projects/cwp106/scratch/cgrudzien/DATA/&CSE_NAME;">
  <!-- END COMPUTER-DEPENDENT -->

  <!-- USER-DEPENDENT ITEMS -->
  <!ENTITY EMAIL               "cgrudzien@ucsd.edu">
  <!ENTITY USERID              "cgrudzien">
  <!-- END USER-DEPENDENT -->

  <!-- WORKFLOW SETTINGS -->
  <!ENTITY EXP_HOME            "&CLONE_ROOT;/data/simulation_io/&EXP_NAME;">
  <!ENTITY EXP_LOG             "&CLONE_ROOT;/logs/&EXP_NAME;">
  <!ENTITY EXP_CONFIG          "&CLONE_ROOT;/simulation_settings/&EXP_NAME;">
  <!ENTITY SCRIPTS             "&CLONE_ROOT;/scripts">
  <!ENTITY DRIVERS             "&SCRIPTS;/drivers">
  <!ENTITY ENVIRONMENTS        "&SCRIPTS;/environments">
  <!-- END WORKFLOW SETTINGS -->

  <!-- SOFTWARE SETTINGS -->
  <!ENTITY WPS_SERIAL_ROOT     "&SOFT_ROOT;/WRF_CODE/WRF_4.4/WPS_serial">
  <!ENTITY WPS_PARALLEL_ROOT   "&SOFT_ROOT;/WRF_CODE/WRF_4.4/WPS_parallel">
  <!ENTITY WRF_ROOT            "&SOFT_ROOT;/WRF_CODE/WRF_4.4/WRF">
  <!ENTITY WRFDA_ROOT          "&SOFT_ROOT;/WRF_CODE/WRF_4.4/WRFDA">
  <!ENTITY GSI_EXE             "&SOFT_ROOT;/GSI_CODE/comGSIv3.7_EnKFv1.3/build/bin/gsi.x">
  <!ENTITY CRTM_ROOT           "&SOFT_ROOT;/CRTM_CODE/CRTM_v2.3.0/Big_Endian">
  <!-- END SOFTWARE SETTINGS -->

  <!-- CYCLING SETTINGS -->
  <!-- Forecasts with same end-time but different start time are performed as unique workflows currently -->
  <!-- I.e., CYCLE_START=CYCLE_END, and a single cycle with unique forecast length is defined -->
  <!ENTITY CYCLE_START         "201902140000">
  <!ENTITY CYCLE_END           "201902140000">
  <!ENTITY CYCLE_INTERVAL      "01:00:00">
  <!-- END CYCLING SETTINGS -->

  <!-- UNGRIB SETTINGS -->
  <!ENTITY CTR_BKG_DATA        "GFS"> <!-- GFS and GEFS currently supported for 3D-(En)VAR -->
  <!ENTITY WPS_CONSTANT        "&ENVIRONMENTS;/WPS_constants.sh">
  <!-- END UNGRIB SETTINGS -->

  <!-- WRF SETTINGS -->
  <!ENTITY WRF_CONSTANT        "&ENVIRONMENTS;/WRF_constants.sh">
  <!ENTITY WRF_CTR_DOM         "2"> <!-- Max domain for control simulation -->
  <!ENTITY WRF_DOWN_DOM        "2"> <!-- Domain index to have ICs downscaled from d01 -->
  <!ENTITY WRF_ENS_ROOT        "&DATA_ROOT;/ensembles"> <!-- Static ensemble perturbations stored here --> 
  <!ENTITY FCST_LENGTH         "24">
  <!ENTITY FCST_INTERVAL       "01">
  <!ENTITY CTR_DATA_INTERVAL   "03"> <!-- This setting is applied to all WRF preprocessing and WRF control run -->
  <!ENTITY IF_SST_UPDATE       "No"> <!-- This setting defines SST updates in simulation and is applied to both WRF and real.exe runs -->
  <!ENTITY IF_FEEDBACK         "No"> <!-- This setting defines 1- or 2-way nesting with WRF domains -->
  <!ENTITY NIO_TPG             "0"> <!-- Set NIO_TPG=0 for default TURN OFF QUILTING --> 
  <!ENTITY NIO_GROUPS          "4"> 
  <!-- END WRF SETTINGS -->

  <!-- JOB SETTINGS -->
  <!ENTITY SCHED               "slurm">
  <!ENTITY PROJECT             "--account=cwp106">
  <!ENTITY PART_COMPU          "--partition=compute"> 
  <!ENTITY PART_DEBUG          "--partition=shared"> 
  <!ENTITY PART_LRGMEM         "--partition=compute"> 
  <!ENTITY MPIRUN              "mpirun">
  <!ENTITY WPS_PROC            "24"> <!-- WPS parallel / REAL procs, all serial hard-coded as 1 -->
  <!ENTITY WPS_MEM             "5G">
  <!ENTITY WPS_NODESIZE        "24">
  <!ENTITY WPS_NODES           "1">
  <!ENTITY WPS_WC              "01:00:00">
  <!ENTITY WRF_PROC            "384">
  <!ENTITY WRF_MEM             "5G">
  <!ENTITY WRF_NODESIZE        "24">
  <!ENTITY WRF_NODES           "16">
  <!ENTITY WRF_WC              "36:00:00">
  <!-- END JOB SETTINGS -->
]>

<workflow realtime="F" scheduler="&SCHED;">
  <cycledef group="day">&CYCLE_START; &CYCLE_END; &CYCLE_INTERVAL;</cycledef>
  <log verbosity="10"><cyclestr>&EXP_LOG;/workflow/workflow_@Y@m@d@H.log</cyclestr></log>
  
  <task name="ungrib_ens_00" maxtries="12" cycledefs="day">
    <command>&DRIVERS;/ungrib.sh</command>
    <cores>1</cores>
    <nodesize>&WPS_NODESIZE;</nodesize>
    <walltime>&WPS_WC;</walltime>
    <jobname><cyclestr>ungrib_@Y@m@d@H</cyclestr></jobname>
    <join><cyclestr>&EXP_LOG;/ungrib/ungrib_ens_00_@Y@m@d@H.log</cyclestr></join>
    <native>&PART_DEBUG;</native>
    <native>&PROJECT;</native>
    <native>--export=ALL</native>
    <native>--nodes=&WPS_NODES;</native>
    <native>--mem-per-cpu=&WPS_MEM;</native>
    <envar>
      <name>CONSTANT</name>
      <value>&WPS_CONSTANT;</value>
    </envar>
    <envar>
       <name>ENS_N</name>
       <value>00</value>
    </envar>
    <envar>
      <name>BKG_DATA</name>
      <value>&CTR_BKG_DATA;</value>
    </envar>
    <envar>
      <name>FCST_LENGTH</name>
      <value>&FCST_LENGTH;</value>
    </envar>
    <envar>
      <name>DATA_INTERVAL</name>
      <value>&CTR_DATA_INTERVAL;</value>
    </envar>
    <envar>
      <name>START_TIME</name>
      <value><cyclestr>@Y@m@d@H</cyclestr></value>
    </envar>
    <envar>
      <name>BKG_START_TIME</name>
      <value><cyclestr>@Y@m@d@H</cyclestr></value>
    </envar>
    <envar>
      <name>IF_ECMWF_ML</name>
      <value>No</value>
    </envar>
    <envar>
      <name>WPS_ROOT</name>
      <value>&WPS_SERIAL_ROOT;</value>
    </envar>
    <envar>
      <name>EXP_CONFIG</name>
      <value>&EXP_CONFIG;</value>
    </envar>
    <envar>
      <name>CYCLE_HOME</name>
      <value><cyclestr>&EXP_HOME;/@Y@m@d@H</cyclestr></value>
    </envar>
    <envar>
      <name>DATA_ROOT</name>
      <value>&DATA_ROOT;</value>
    </envar>
  </task>

  <task name="metgrid_ens_00" maxtries="12" cycledefs="day">
    <command>&DRIVERS;/metgrid.sh</command>
    <cores>&WPS_PROC;</cores>
    <nodesize>&WPS_NODESIZE;</nodesize>
    <walltime>&WPS_WC;</walltime>
    <jobname><cyclestr>metgrid_@Y@m@d@H</cyclestr></jobname>
    <join><cyclestr>&EXP_LOG;/metgrid/metgrid_ens_00_@Y@m@d@H.log</cyclestr></join>
    <native>&PART_DEBUG;</native>
    <native>&PROJECT;</native>
    <native>--export=ALL</native>
    <native>--nodes=&WPS_NODES;</native>
    <native>--mem-per-cpu=&WPS_MEM;</native>
    <envar>
      <name>CONSTANT</name>
      <value>&WPS_CONSTANT;</value>
    </envar>
    <envar>
       <name>ENS_N</name>
       <value>00</value>
    </envar>
    <envar>
      <name>FCST_LENGTH</name>
      <value>&FCST_LENGTH;</value>
    </envar>
    <envar>
      <name>DATA_INTERVAL</name>
      <value>&CTR_DATA_INTERVAL;</value>
    </envar>
    <envar>
      <name>START_TIME</name>
      <value><cyclestr>@Y@m@d@H</cyclestr></value>
    </envar>
    <envar>
      <name>MAX_DOM</name>
      <value>&WRF_CTR_DOM;</value>
    </envar>
    <envar>
      <name>WPS_ROOT</name>
      <value>&WPS_PARALLEL_ROOT;</value>
    </envar>
    <envar>
      <name>EXP_CONFIG</name>
      <value>&EXP_CONFIG;</value>
    </envar>
    <envar>
      <name>CYCLE_HOME</name>
      <value><cyclestr>&EXP_HOME;/@Y@m@d@H</cyclestr></value>
    </envar>
    <envar>
      <name>MPIRUN</name>
      <value>&MPIRUN;</value>
    </envar>
    <envar>
      <name>WPS_PROC</name>
      <value>&WPS_PROC;</value>
    </envar>
    <dependency> 
      <taskdep task="ungrib_ens_00" state="SUCCEEDED"/>
    </dependency>
  </task>

  <task name="real_ens_00" maxtries="12" cycledefs="day">
    <command>&DRIVERS;/real.sh</command>
    <cores>&WPS_PROC;</cores>
    <nodesize>&WPS_NODESIZE;</nodesize>
    <walltime>&WPS_WC;</walltime>
    <jobname><cyclestr>real_@Y@m@d@H</cyclestr></jobname>
    <join><cyclestr>&EXP_LOG;/real/real_ens_00_@Y@m@d@H.log</cyclestr></join>
    <native>&PART_DEBUG;</native>
    <native>&PROJECT;</native>
    <native>--export=ALL</native>
    <native>--nodes=&WPS_NODES;</native>
    <native>--mem-per-cpu=&WPS_MEM;</native>
    <envar>
      <name>CONSTANT</name>
      <value>&WRF_CONSTANT;</value>
    </envar>
    <envar>
       <name>ENS_N</name>
       <value>00</value>
    </envar>
    <envar>
      <name>BKG_DATA</name>
      <value>&CTR_BKG_DATA;</value>
    </envar>
    <envar>
      <name>FCST_LENGTH</name>
      <value>&FCST_LENGTH;</value>
    </envar>
    <envar>
      <name>DATA_INTERVAL</name>
      <value>&CTR_DATA_INTERVAL;</value>
    </envar>
    <envar>
      <name>START_TIME</name>
      <value><cyclestr>@Y@m@d@H</cyclestr></value>
    </envar>
    <envar>
      <name>MAX_DOM</name>
      <value>&WRF_CTR_DOM;</value>
    </envar>
    <envar>
      <name>IF_SST_UPDATE</name>
      <value>&IF_SST_UPDATE;</value>
    </envar>
    <envar>
      <name>WRF_ROOT</name>
      <value>&WRF_ROOT;</value>
    </envar>
    <envar>
      <name>EXP_CONFIG</name>
      <value>&EXP_CONFIG;</value>
    </envar>
    <envar>
      <name>CYCLE_HOME</name>
      <value><cyclestr>&EXP_HOME;/@Y@m@d@H</cyclestr></value>
    </envar>
    <envar>
      <name>MPIRUN</name>
      <value>&MPIRUN;</value>
    </envar>
    <envar>
      <name>WPS_PROC</name>
      <value>&WPS_PROC;</value>
    </envar>
    <dependency> 
      <taskdep task="metgrid_ens_00" state="SUCCEEDED"/>
    </dependency>
  </task>

  <task name="wrfda_latbc" maxtries="12" cycledefs="day">
    <command>&DRIVERS;/wrfda.sh</command>
    <cores>1</cores>
    <nodesize>&WPS_NODESIZE;</nodesize>
    <walltime>&WPS_WC;</walltime>
    <jobname><cyclestr>wrfda_latbc_@Y@m@d@H</cyclestr></jobname>
    <join><cyclestr>&EXP_LOG;/wrfda/wrfda_latbc_@Y@m@d@H.log</cyclestr></join>
    <native>&PART_DEBUG;</native>
    <native>&PROJECT;</native>
    <native>--export=ALL</native>
    <native>--nodes=&WPS_NODES;</native>
    <native>--mem-per-cpu=&WPS_MEM;</native>
    <envar>
      <name>CONSTANT</name>
      <value>&WRF_CONSTANT;</value>
    </envar>
    <envar>
      <name>N_ENS</name>
      <value>00</value>
    </envar>
    <envar>
      <name>ANL_TIME</name>
      <value><cyclestr>@Y@m@d@H</cyclestr></value>
    </envar>
    <envar>
      <name>IF_ENS_UPDATE</name>
      <value>No</value>
    </envar>
    <envar>
      <name>BOUNDARY</name>
      <value>LATERAL</value>
    </envar>
    <envar>
      <name>WRF_CTR_DOM</name>
      <value>&WRF_CTR_DOM;</value>
    </envar>
    <envar>
      <name>WRF_ENS_DOM</name>
      <value>1</value>
    </envar>
    <envar>
      <name>WRFDA_ROOT</name>
      <value>&WRFDA_ROOT;</value>
    </envar>
    <envar>
      <name>EXP_CONFIG</name>
      <value>&EXP_CONFIG;</value>
    </envar>
    <envar>
      <name>CYCLE_HOME</name>
      <value><cyclestr>&EXP_HOME;/@Y@m@d@H</cyclestr></value>
    </envar>
    <envar>
      <name>ENS_ROOT</name>
      <value><cyclestr>&WRF_ENS_ROOT;/@Y@m@d@H</cyclestr></value>
    </envar>
    <dependency> 
      <taskdep task="real_ens_00" state="SUCCEEDED"/>
    </dependency>
  </task>

  <task name="wrf_ens_00" maxtries="12" cycledefs="day">
    <command>&DRIVERS;/wrf.sh</command>
    <cores>&WRF_PROC;</cores>
    <nodesize>&WRF_NODESIZE;</nodesize>
    <walltime>&WRF_WC;</walltime>
    <jobname><cyclestr>wrf_@Y@m@d@H</cyclestr></jobname>
    <join><cyclestr>&EXP_LOG;/wrf/wrf_ens_00_@Y@m@d@H.log</cyclestr></join>
    <native>&PART_COMPU;</native>
    <native>&PROJECT;</native>
    <native>--export=ALL</native>
    <native>--nodes=&WRF_NODES;</native>
    <native>--mem-per-cpu=&WRF_MEM;</native>
    <envar>
      <name>CONSTANT</name>
      <value>&WRF_CONSTANT;</value>
    </envar>
    <envar>
       <name>ENS_N</name>
       <value>00</value>
    </envar>
    <envar>
      <name>BKG_DATA</name>
      <value>&CTR_BKG_DATA;</value>
    </envar>
    <envar>
      <name>FCST_LENGTH</name>
      <value>&FCST_LENGTH;</value>
    </envar>
    <envar>
      <name>FCST_INTERVAL</name>
      <value>&FCST_INTERVAL;</value>
    </envar>
    <envar>
      <name>DATA_INTERVAL</name>
      <value>&CTR_DATA_INTERVAL;</value>
    </envar>
    <envar>
      <name>CYCLE_INTERVAL</name>
      <value>&CYCLE_INTERVAL;</value>
    </envar>
    <envar>
      <name>START_TIME</name>
      <value><cyclestr>@Y@m@d@H</cyclestr></value>
    </envar>
    <envar>
      <name>MAX_DOM</name>
      <value>&WRF_CTR_DOM;</value>
    </envar>
    <envar>
      <name>DOWN_DOM</name>
      <value>&WRF_DOWN_DOM;</value>
    </envar>
    <envar>
      <name>IF_CYCLING</name>
      <value>Yes</value>
    </envar>
    <envar>
      <name>IF_SST_UPDATE</name>
      <value>&IF_SST_UPDATE;</value>
    </envar>
    <envar>
      <name>IF_FEEDBACK</name>
      <value>&IF_FEEDBACK;</value>
    </envar>
    <envar>
      <name>WRF_ROOT</name>
      <value>&WRF_ROOT;</value>
    </envar>
    <envar>
      <name>EXP_CONFIG</name>
      <value>&EXP_CONFIG;</value>
    </envar>
    <envar>
      <name>CYCLE_HOME</name>
      <value><cyclestr>&EXP_HOME;/@Y@m@d@H</cyclestr></value>
    </envar>
    <envar>
      <name>DATA_ROOT</name>
      <value>&DATA_ROOT;</value>
    </envar>
    <envar>
      <name>MPIRUN</name>
      <value>&MPIRUN;</value>
    </envar>
    <envar>
      <name>WRF_PROC</name>
      <value>&WRF_PROC;</value>
    </envar>
    <envar>
      <name>NIO_GROUPS</name>
      <value>&NIO_GROUPS;</value>
    </envar>
    <envar>
      <name>NIO_TPG</name>
      <value>&NIO_TPG;</value>
    </envar>
    <dependency> 
      <taskdep task="wrfda_latbc" state="SUCCEEDED"/>
    </dependency>
  </task>

</workflow>
