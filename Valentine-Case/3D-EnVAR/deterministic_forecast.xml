<?xml version="1.0"?>
<!DOCTYPE workflow
[
  <!-- GSI Observation-Analysis-Forecast Cycling Workflow -->

  <!-- COMPUTER-DEPENDENT ITEMS -->
  <!ENTITY WORK_SPACE          "/cw3e/mead/projects/cwp130/scratch/cgrudzien">
  <!ENTITY SOFT_SPACE          "/cw3e/mead/projects/cwp130/scratch/cgrudzien">
  <!-- END COMET-DEPENDENT -->

  <!-- USER-DEPENDENT ITEMS -->
  <!ENTITY EMAIL               "cgrudzien@ucsd.edu">
  <!ENTITY USERID              "cgrudzien">
  <!-- END USER-DEPENDENT -->

  <!-- WORKFLOW SETTINGS -->
  <!ENTITY PROJ_HOME           "&WORK_SPACE;/GSI-WRF-Cycling-Template/Valentine-Case/3D-EnVAR">
  <!ENTITY SCRIPTS             "&PROJ_HOME;/scripts">
  <!ENTITY DRIVERS             "&SCRIPTS;/drivers">
  <!ENTITY ENVIRONMENTS        "&SCRIPTS;/environments">
  <!ENTITY PROJ_DATA           "&PROJ_HOME;/data">
  <!ENTITY LOG                 "&PROJ_DATA;/log/deterministic_forecast">
  <!ENTITY INPUT_DATAROOT      "&PROJ_DATA;/forecast_io">
  <!ENTITY STATIC_DATA         "&PROJ_DATA;/static">
  <!-- END WORKFLOW SETTINGS -->

  <!-- SOFTWARE SETTINGS -->
  <!ENTITY WPS_SERIAL_ROOT     "&SOFT_SPACE;/WRF_CODE/WRF_4.4/WPS_serial">
  <!ENTITY WPS_PARALLEL_ROOT   "&SOFT_SPACE;/WRF_CODE/WRF_4.4/WPS_parallel">
  <!ENTITY WRF_ROOT            "&SOFT_SPACE;/WRF_CODE/WRF_4.4/WRF">
  <!ENTITY WRFDA_ROOT          "&SOFT_SPACE;/WRF_CODE/WRF_4.4/WRFDA">
  <!ENTITY GSI_ROOT            "&SOFT_SPACE;/GSI_CODE/comGSIv3.7_EnKFv1.3">
  <!ENTITY CRTM_VERSION        "2.3.0">
  <!-- END SOFTWARE SETTINGS -->

  <!-- CYCLING SETTINGS -->
  <!-- Forecasts with same end-time but different start time are performed as unique workflows currently -->
  <!-- I.e., CYCLE_START=CYCLE_END, and a single cycle with unique forecast length is defined -->
  <!ENTITY CYCLE_START         "201902110000">
  <!ENTITY CYCLE_END           "201902110000">
  <!ENTITY CYCLE_INTV          "01:00:00">
  <!-- END CYCLING SETTINGS -->

  <!-- UNGRIB SETTINGS -->
  <!ENTITY BKG_DATA            "GEFS"> <!-- GFS and GEFS currently supported for 3D-(En)VAR -->
  <!ENTITY WPS_CONSTANT        "&ENVIRONMENTS;/WPS_constants.ksh">
  <!-- END UNGRIB SETTINGS -->

  <!-- WRF SETTINGS -->
  <!ENTITY WRF_CONSTANT        "&ENVIRONMENTS;/WRF_constants.ksh">
  <!ENTITY WRF_CTR_DOM         "2">
  <!ENTITY WRF_ENS_DOM         "1">
  <!ENTITY WRF_DOWN_DOM        "2"> <!-- Domain index to have ICs downscaled from d01 -->
  <!ENTITY FCST_LENGTH         "108">
  <!ENTITY FCST_INTERVAL       "01">
  <!ENTITY DATA_INTERVAL       "06"> <!-- This setting is applied to all WRF preprocessing and WRF -->
  <!ENTITY IF_SST_UPDATE       "No"> <!-- This setting defines SST updates in simulation and is applied to both WRF and real.exe runs -->
  <!ENTITY IF_FEEDBACK         "No"> <!-- This setting defines 1- or 2-way nesting with WRF domains -->
  <!ENTITY NIO_TASKS_PER_GROUP "0"> <!-- Set NIO_TASKS_PER_GROUP=0 for default TURN OFF QUILTING --> 
  <!ENTITY NIO_GROUPS          "4"> 
  <!-- END WRF SETTINGS -->

  <!-- JOB SETTINGS -->
  <!ENTITY SCHED               "slurm">
  <!ENTITY PROJECT             "--account=cwp130">
  <!ENTITY PARTITION           "--partition=compute"> 
  <!ENTITY MPIRUN              "mpirun">
  <!ENTITY UNGRIB_PROC         "1">
  <!ENTITY UNGRIB_MEM_PER_CPU  "5G">
  <!ENTITY UNGRIB_NODESIZE     "24">
  <!ENTITY UNGRIB_NODES        "1">
  <!ENTITY UNGRIB_WC           "00:30:00">
  <!ENTITY METGRID_PROC        "24">
  <!ENTITY METGRID_MEM_PER_CPU "5G">
  <!ENTITY METGRID_NODESIZE    "24">
  <!ENTITY METGRID_NODES       "1">
  <!ENTITY METGRID_WC          "00:30:00">
  <!ENTITY REAL_PROC           "24">
  <!ENTITY REAL_MEM_PER_CPU    "5G">
  <!ENTITY REAL_NODESIZE       "24">
  <!ENTITY REAL_NODES          "1">
  <!ENTITY REAL_WC             "00:30:00">
  <!ENTITY WRFDA_PROC          "1">
  <!ENTITY WRFDA_MEM_PER_CPU   "5G">
  <!ENTITY WRFDA_NODESIZE      "24">
  <!ENTITY WRFDA_NODES         "1">
  <!ENTITY WRFDA_WC            "00:30:00">
  <!ENTITY WRF_PROC            "384">
  <!ENTITY WRF_MEM_PER_CPU     "2G">
  <!ENTITY WRF_NODESIZE        "24">
  <!ENTITY WRF_NODES           "16">
  <!ENTITY WRF_WC              "12:00:00">
  <!-- END JOB SETTINGS -->
]>

<workflow realtime="F" scheduler="&SCHED;">
  <cycledef group="day">&CYCLE_START; &CYCLE_END; &CYCLE_INTV;</cycledef>
  <log verbosity="10"><cyclestr>&LOG;/workflow/workflow_@Y@m@d@H.log</cyclestr></log>
  
  <task name="ungrib" maxtries="3" cycledefs="day">
    <command>&DRIVERS;/ungrib.ksh</command>
    <cores>&UNGRIB_PROC;</cores>
    <nodesize>&UNGRIB_NODESIZE;</nodesize>
    <walltime>&UNGRIB_WC;</walltime>
    <jobname><cyclestr>ungrib_@Y@m@d@H</cyclestr></jobname>
    <join><cyclestr>&LOG;/ungrib/ungrib_@Y@m@d@H.log</cyclestr></join>
    <native>&PARTITION;</native>
    <native>&PROJECT;</native>
    <native>--export=ALL</native>
    <native>--nodes=&UNGRIB_NODES;</native>
    <native>--mem-per-cpu=&UNGRIB_MEM_PER_CPU;</native>
    <envar>
      <name>CONSTANT</name>
      <value>&WPS_CONSTANT;</value>
    </envar>
    <envar>
      <name>BKG_DATA</name>
      <value>&BKG_DATA;</value>
    </envar>
    <envar>
       <name>ENS_N</name>
       <value>00</value>
    </envar>
    <envar>
      <name>START_TIME</name>
      <value><cyclestr>@Y@m@d@H</cyclestr></value>
    </envar>
    <envar>
      <name>BKG_START_TIME</name>
      <value><cyclestr>@Y@m@d@H</cyclestr></value>
    </envar>
    <envar>
      <name>FCST_LENGTH</name>
      <value>&FCST_LENGTH;</value>
    </envar>
    <envar>
      <name>DATA_INTERVAL</name>
      <value>&DATA_INTERVAL;</value>
    </envar>
    <envar>
      <name>WPS_ROOT</name>
      <value>&WPS_SERIAL_ROOT;</value>
    </envar>
    <envar>
      <name>STATIC_DATA</name>
      <value>&STATIC_DATA;</value>
    </envar>
    <envar>
      <name>INPUT_DATAROOT</name>
      <value><cyclestr>&INPUT_DATAROOT;/@Y@m@d@H</cyclestr></value>
    </envar>
    <envar>
      <name>IF_ECMWF_ML</name>
      <value>No</value>
    </envar>
  </task>

  <task name="metgrid" maxtries="3" cycledefs="day">
    <command>&DRIVERS;/metgrid.ksh</command>
    <cores>&METGRID_PROC;</cores>
    <nodesize>&METGRID_NODESIZE;</nodesize>
    <walltime>&METGRID_WC;</walltime>
    <jobname><cyclestr>metgrid_@Y@m@d@H</cyclestr></jobname>
    <join><cyclestr>&LOG;/metgrid/metgrid_@Y@m@d@H.log</cyclestr></join>
    <native>&PARTITION;</native>
    <native>&PROJECT;</native>
    <native>--export=ALL</native>
    <native>--nodes=&METGRID_NODES;</native>
    <native>--mem-per-cpu=&METGRID_MEM_PER_CPU;</native>
    <envar>
      <name>CONSTANT</name>
      <value>&WPS_CONSTANT;</value>
    </envar>
    <envar>
      <name>START_TIME</name>
      <value><cyclestr>@Y@m@d@H</cyclestr></value>
    </envar>
    <envar>
       <name>ENS_N</name>
       <value>00</value>
    </envar>
    <envar>
      <name>FCST_LENGTH</name>
      <value>&FCST_LENGTH;</value>
    </envar>
    <envar>
      <name>DATA_INTERVAL</name>
      <value>&DATA_INTERVAL;</value>
    </envar>
    <envar>
      <name>MAX_DOM</name>
      <value>&WRF_CTR_DOM;</value>
    </envar>
    <envar>
      <name>WPS_ROOT</name>
      <value>&WPS_PARALLEL_ROOT;</value>
    </envar>
    <envar>
      <name>STATIC_DATA</name>
      <value>&STATIC_DATA;</value>
    </envar>
    <envar>
      <name>INPUT_DATAROOT</name>
      <value><cyclestr>&INPUT_DATAROOT;/@Y@m@d@H</cyclestr></value>
    </envar>
    <envar>
      <name>MPIRUN</name>
      <value>&MPIRUN;</value>
    </envar>
    <dependency> 
      <taskdep task="ungrib" state="SUCCEEDED"/>
    </dependency>
  </task>

  <task name="real" maxtries="3" cycledefs="day">
    <command>&DRIVERS;/real.ksh</command>
    <cores>&REAL_PROC;</cores>
    <nodesize>&REAL_NODESIZE;</nodesize>
    <walltime>&REAL_WC;</walltime>
    <jobname><cyclestr>real_@Y@m@d@H</cyclestr></jobname>
    <join><cyclestr>&LOG;/real/real_@Y@m@d@H.log</cyclestr></join>
    <native>&PARTITION;</native>
    <native>&PROJECT;</native>
    <native>--export=ALL</native>
    <native>--nodes=&REAL_NODES;</native>
    <native>--mem-per-cpu=&REAL_MEM_PER_CPU;</native>
    <envar>
      <name>CONSTANT</name>
      <value>&WRF_CONSTANT;</value>
    </envar>
    <envar>
       <name>ENS_N</name>
       <value>00</value>
    </envar>
    <envar>
      <name>START_TIME</name>
      <value><cyclestr>@Y@m@d@H</cyclestr></value>
    </envar>
    <envar>
      <name>FCST_LENGTH</name>
      <value>&FCST_LENGTH;</value>
    </envar>
    <envar>
      <name>DATA_INTERVAL</name>
      <value>&DATA_INTERVAL;</value>
    </envar>
    <envar>
      <name>MAX_DOM</name>
      <value>&WRF_CTR_DOM;</value>
    </envar>
    <envar>
      <name>WRF_ROOT</name>
      <value>&WRF_ROOT;</value>
    </envar>
    <envar>
      <name>STATIC_DATA</name>
      <value>&STATIC_DATA;</value>
    </envar>
    <envar>
      <name>INPUT_DATAROOT</name>
      <value><cyclestr>&INPUT_DATAROOT;/@Y@m@d@H</cyclestr></value>
    </envar>
    <envar>
      <name>IF_SST_UPDATE</name>
      <value>&IF_SST_UPDATE;</value>
    </envar>
    <envar>
      <name>MPIRUN</name>
      <value>&MPIRUN;</value>
    </envar>
    <envar>
      <name>REAL_PROC</name>
      <value>&REAL_PROC;</value>
    </envar>
    <dependency> 
      <taskdep task="metgrid" state="SUCCEEDED"/>
    </dependency>
  </task>

  <task name="wrfda_latbc" maxtries="4" cycledefs="day">
    <command>&DRIVERS;/wrfda.ksh</command>
    <cores>&WRFDA_PROC;</cores>
    <nodesize>&WRFDA_NODESIZE;</nodesize>
    <walltime>&WRFDA_WC;</walltime>
    <jobname><cyclestr>wrfda_latbc_@Y@m@d@H</cyclestr></jobname>
    <join><cyclestr>&LOG;/wrfda/wrfda_latbc_@Y@m@d@H.log</cyclestr></join>
    <native>&PARTITION;</native>
    <native>&PROJECT;</native>
    <native>--export=ALL</native>
    <native>--nodes=&WRFDA_NODES;</native>
    <native>--mem-per-cpu=&WRFDA_MEM_PER_CPU;</native>
    <envar>
      <name>CONSTANT</name>
      <value>&WRF_CONSTANT;</value>
    </envar>
    <envar>
      <name>IF_ENS_COLD_START</name>
      <value>Yes</value>
    </envar>
    <envar>
      <name>N_ENS</name>
      <value>00</value>
    </envar>
    <envar>
      <name>IF_LOWER</name>
      <value>No</value>
    </envar>
    <envar>
      <name>ANAL_TIME</name>
      <value><cyclestr>@Y@m@d@H</cyclestr></value>
    </envar>
    <envar>
      <name>WRF_CTR_DOM</name>
      <value>&WRF_CTR_DOM;</value>
    </envar>
    <envar>
      <name>WRF_ENS_DOM</name>
      <value>&WRF_ENS_DOM;</value>
    </envar>
    <envar>
      <name>WRFDA_ROOT</name>
      <value>&WRFDA_ROOT;</value>
    </envar>
    <envar>
      <name>STATIC_DATA</name>
      <value>&STATIC_DATA;</value>
    </envar>
    <envar>
      <name>INPUT_DATAROOT</name>
      <value><cyclestr>&INPUT_DATAROOT;/@Y@m@d@H</cyclestr></value>
    </envar>
    <envar>
      <name>MPIRUN</name>
      <value>&MPIRUN;</value>
    </envar>
    <dependency> 
      <taskdep task="real" state="SUCCEEDED"/>
    </dependency>
  </task>

  <task name="wrf" maxtries="3" cycledefs="day">
    <command>&DRIVERS;/wrf.ksh</command>
    <cores>&WRF_PROC;</cores>
    <nodesize>&WRF_NODESIZE;</nodesize>
    <walltime>&WRF_WC;</walltime>
    <jobname><cyclestr>wrf_@Y@m@d@H</cyclestr></jobname>
    <join><cyclestr>&LOG;/wrf/wrf_@Y@m@d@H.log</cyclestr></join>
    <native>&PARTITION;</native>
    <native>&PROJECT;</native>
    <native>--export=ALL</native>
    <native>--nodes=&WRF_NODES;</native>
    <native>--mem-per-cpu=&WRF_MEM_PER_CPU;</native>
    <envar>
      <name>CONSTANT</name>
      <value>&WRF_CONSTANT;</value>
    </envar>
    <envar>
       <name>ENS_N</name>
       <value>00</value>
    </envar>
    <envar>
      <name>START_TIME</name>
      <value><cyclestr>@Y@m@d@H</cyclestr></value>
    </envar>
    <envar>
      <name>FCST_LENGTH</name>
      <value>&FCST_LENGTH;</value>
    </envar>
    <envar>
      <name>FCST_INTERVAL</name>
      <value>&FCST_INTERVAL;</value>
    </envar>
    <envar>
      <name>DATA_INTERVAL</name>
      <value>&DATA_INTERVAL;</value>
    </envar>
    <envar>
      <name>CYCLE_INTV</name>
      <value>&CYCLE_INTV;</value>
    </envar>
    <envar>
      <name>MAX_DOM</name>
      <value>&WRF_CTR_DOM;</value>
    </envar>
    <envar>
      <name>DOWN_DOM</name>
      <value>&WRF_DOWN_DOM;</value>
    </envar>
    <envar>
      <name>WRF_ROOT</name>
      <value>&WRF_ROOT;</value>
    </envar>
    <envar>
      <name>STATIC_DATA</name>
      <value>&STATIC_DATA;</value>
    </envar>
    <envar>
      <name>INPUT_DATAROOT</name>
      <value><cyclestr>&INPUT_DATAROOT;/@Y@m@d@H</cyclestr></value>
    </envar>
    <envar>
      <name>MPIRUN</name>
      <value>&MPIRUN;</value>
    </envar>
    <envar>
      <name>WRF_PROC</name>
      <value>&WRF_PROC;</value>
    </envar>
    <envar>
      <name>NIO_GROUPS</name>
      <value>&NIO_GROUPS;</value>
    </envar>
    <envar>
      <name>NIO_TASKS_PER_GROUP</name>
      <value>&NIO_TASKS_PER_GROUP;</value>
    </envar>
    <envar>
      <name>IF_CYCLING</name>
      <value>No</value>
    </envar>
    <envar>
      <name>IF_SST_UPDATE</name>
      <value>&IF_SST_UPDATE;</value>
    </envar>
    <envar>
      <name>IF_FEEDBACK</name>
      <value>&IF_FEEDBACK;</value>
    </envar>
    <dependency> 
      <taskdep task="wrfda_latbc" state="SUCCEEDED"/>
    </dependency>
  </task>

</workflow>
